# Environment Variables - NyayaSahayak
# Copy this file to .env and fill in your values

# =============================================================================
# Application Settings
# =============================================================================
APP_NAME=NyayaSahayak
APP_ENV=development  # development | staging | production
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production

# =============================================================================
# DigiLocker API (via API Setu)
# Get credentials from: https://apisetu.gov.in
# =============================================================================
DIGILOCKER_CLIENT_ID=your_digilocker_client_id
DIGILOCKER_CLIENT_SECRET=your_digilocker_client_secret
DIGILOCKER_REDIRECT_URI=http://localhost:8000/api/v1/digilocker/callback

# Sandbox vs Production
DIGILOCKER_ENV=sandbox  # sandbox | production
DIGILOCKER_AUTH_URL=https://dgsandbox.digitallocker.gov.in/public/oauth2/1/authorize
DIGILOCKER_API_URL=https://dgsandbox.digitallocker.gov.in/public/oauth2/1

# =============================================================================
# Database - MongoDB
# =============================================================================
MONGODB_URI=mongodb://localhost:27017/nyayasahayak
MONGODB_DB_NAME=nyayasahayak

# For MongoDB Atlas (production):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/nyayasahayak

# =============================================================================
# Cache & Ephemeral Storage - Redis
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# PII Settings (DO NOT INCREASE TTL)
PII_TTL_SECONDS=300  # 5 minutes - MAXIMUM allowed

# =============================================================================
# Vector Database - Pinecone
# =============================================================================
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX=nyayasahayak-legal

# =============================================================================
# LLM Provider
# =============================================================================
# Option 1: OpenAI
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4-turbo-preview

# Option 2: Google Gemini
GOOGLE_API_KEY=your_google_api_key
GOOGLE_MODEL=gemini-pro

# Active LLM Provider
LLM_PROVIDER=openai  # openai | google

# =============================================================================
# Embeddings
# =============================================================================
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536

# =============================================================================
# OCR - Google Vision API
# =============================================================================
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
# Or set the JSON directly:
# GOOGLE_VISION_CREDENTIALS_JSON={"type": "service_account", ...}

# =============================================================================
# Document Storage - S3/Cloud Storage
# =============================================================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-south-1
S3_BUCKET_NAME=nyayasahayak-documents

# =============================================================================
# e-Sign / e-Stamp Integration (Phase 3)
# =============================================================================
ESIGN_API_KEY=your_esign_api_key
ESTAMP_API_KEY=your_estamp_api_key

# =============================================================================
# Encryption
# =============================================================================
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your_fernet_encryption_key

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=500

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO  # DEBUG | INFO | WARNING | ERROR
LOG_FORMAT=json  # json | text

# =============================================================================
# Frontend
# =============================================================================
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
